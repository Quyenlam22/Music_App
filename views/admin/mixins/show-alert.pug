mixin alert-success(time)
  //- message - Global variable 
  - if (messages.success)
    .message.info 
      div(
        class="alert alert-success"
        data-time=time
        show-alert  
      ) #{messages.success} <span close-alert>x</span>

mixin alert-error(time)
  //- message - Global variable 
  - if (messages.error)
    .message.info 
      div(
        class="alert alert-danger"
        data-time=time
        show-alert  
      ) #{messages.error} <span close-alert>x</span>

mixin alert-message(time)
  div(
    class="alert alert-success alert-hidden d-none"
    show-alert
    data-time=time
  ) Thay đổi trạng thái thành công! <span close-alert>X</span>