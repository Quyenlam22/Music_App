extends ../../layouts/default.pug
include ../../mixins/moment.pug

block main 
    if(role.permissions.includes("singers_view"))
        if(singer.fullName)
            h1(class="mb-4") Thông tin ca sĩ - #{singer.fullName}

        if(singer.avatar)
            div(class="mb-4")
                img(
                    src=singer.avatar
                    style="width: 100px"
                )

        if(singer.status)
            div(class="mb-4")
                span Trạng thái: 
                if(singer.status === "active")
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-danger") Dừng hoạt động

        if(singer.updatedAt)
            div(class="mb-4") Ngày cập nhật: <b>
                +formatDateTime(singer.updatedAt)
                </b>
        a(
            class="btn btn-warning"
            href=`${prefixAdmin}/singers/edit/${singer.id}`
        ) Chỉnh sửa
