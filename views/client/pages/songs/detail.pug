extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug

block main
    .singer-detail
        .container.my-3 
            .row 
                .col-12 
                    .inner-title #{song.title}

                .inner-actions 
                    .inner-action.inner-time
                        .inner-time <i class="fa-regular fa-clock"></i> 
                            +formatDate(song.createdAt)
                    .inner-action.inner-singer 
                        <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName} 
                    .inner-action.inner-topic 
                        <i class="fa-solid fa-music"></i> #{topic.title} 
                    .inner-action.inner-listen 
                        <i class="fa-solid fa-headphones"></i> 
                        span #{song.listen} lượt nghe 
                    div(class=("inner-action inner-like " + (song.isLike ? "active" : "")) button-like=song.id) 
                        <i class="fa-regular fa-thumbs-up"></i> 
                        span #{song.like.length} thích
                    div(class=("inner-action inner-heart " + (song.isFavoriteSong ? "active" : "")) button-favorite=song.id)
                        <i class="fa-regular fa-heart" ></i> Bài hát yêu thích
                
                .inner-play 
                    .inner-avatar
                        img(src=song.avatar)
                    .inner-audio 
                        //- audio(controls)
                        //-     source(src=`#`) 
                        div(
                            id="aplayer" 
                            data-song=song 
                            data-singer=singer
                        )

                .inner-desc 
                    .inner-label Mô tả bài hát
                    .inner-text 
                        | !{song.description}  

                .inner-desc 
                    .inner-label Lời bài hát
                    .inner-text 
                        | !{song.lyrics} 