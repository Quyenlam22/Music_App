extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row
            form(
                action=`/user/change-password?_method=PATCH`
                method="POST"
            ) 
                div(class="form-group")
                    label(for="password") Mật khẩu cũ
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    ) 
                div(class="form-group")
                    label(for="newPassword") Mật khẩu mới
                    input(
                        type="password"
                        class="form-control"
                        id="newPassword"
                        name="newPassword"
                        required
                    ) 
                div(class="form-group")
                    label(for="confirmPassword") Xác nhận mật khẩu
                    input(
                        type="password"
                        class="form-control"
                        id="confirmPassword"
                        name="confirmPassword"
                        required
                    ) 
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Cập nhật thông tin
                