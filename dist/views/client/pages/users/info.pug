extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row
            form(
                action=`/user/info?_method=PATCH`
                method="POST"
                enctype="multipart/form-data"
            ) 
                div(class="form-group")
                    label(for="fullName") Họ tên
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value=userClient.fullName
                        required
                    ) 
                div(class="form-group")
                    label(for="email") Email
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value=userClient.email
                        required
                    ) 
                div(
                    class="form-group"
                    upload-image
                )
                    label(for="avatar") Avatar
                    input(
                        type="file"
                        class="form-control-file"
                        id="avatar"
                        class="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input
                    )
                    img(
                        src=(userClient.avatar ? userClient.avatar : "/images/avatar.png")
                        class="image-preview"
                        upload-image-preview
                    )
                div(class="form-group")
                    label(for="phone") Số điện thoại
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value=userClient.phone
                        required
                    ) 
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Cập nhật thông tin
                    button(
                        href=`/users/change-password`
                        class="btn btn-secondary btn"
                        button-change-password
                        style="margin: 0 3px"
                    ) Đổi mật khẩu

                    button(
                        class="btn btn-warning"
                        button-delete-account
                    ) Xóa tài khoản
