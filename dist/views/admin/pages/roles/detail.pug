extends ../../layouts/default.pug

block main 
    if(role.permissions.includes("roles_view"))
        if(record.title)
            h1(class="mb-4") Chi tiết nhóm quyền - #{record.title}

        if(record.description)
            div(class="mb-4") Mô tả: <b>!{record.description}</b>

        if(record.permissions)
            div(class="mb-4") Phân quyền: 
                each item in record.permissions
                    <p> <b> + #{item}</b> </p>

        a(
            class="btn btn-warning"
            href=`${prefixAdmin}/roles/edit/${record.id}`
        ) Chỉnh sửa