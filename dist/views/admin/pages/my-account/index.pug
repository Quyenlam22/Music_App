extends ../../layouts/default.pug

block main 
    if(userAdmin.fullName)
        h1(class="mb-4") Thông tin tài khoản - #{userAdmin.fullName}

    if(userAdmin.avatar)
        div(class="mb-4") Avatar:
            br
            img(
                src=userAdmin.avatar
                style="width: 100px"
            )

    if(userAdmin.email)
        div(class="mb-4") Email: <b>!{userAdmin.email}</b>

    if(userAdmin.phone)
        div(class="mb-4") Phone: <b>#{userAdmin.phone}</b>
    
    if(role.title)
        div(class="mb-4") Nhóm quyền: <b>#{role.title}</b>
    
    if(userAdmin.status)
        div(class="mb-4")
            span Trạng thái: 
            if(userAdmin.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/my-account/edit`
    ) Chỉnh sửa

    script(src="/admin/js/account.js") 